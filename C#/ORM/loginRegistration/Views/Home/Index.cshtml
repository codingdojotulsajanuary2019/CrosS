@using loginRegistration.Models
@model User

<div>
    <h1 class="d-inline-block">Register to this Cool Site!</h1>
    <h3 class="float-right"><a href="/login" class="d-inline-block">Login</a></h3>
</div>
<HR>
<div>
    <form class="edge mt-3 rform text-light" action="/signup" method="POST">
        <input class="register" type="text" asp-for="FirstName" placeholder="First Name">
            <span class="text-danger" asp-validation-for="FirstName"></span>
        <input class="register" type="text" asp-for="Password" placeholder="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        <input class="register" type="text" asp-for="LastName" placeholder="Last Name">
            <span class="text-danger" asp-validation-for="LastName"></span>
        <input class="register" type="text" asp-for="Confirm" placeholder="Confirm Password">
            <span class="text-danger" asp-validation-for="Confirm"></span>
        <input class="register email" type="text" asp-for="Email" placeholder="Email Address">
            <span class="text-danger" asp-validation-for="Email"></span>
        <input class="rbutton" type="submit" value="Sign Up">
    </form>
</div>